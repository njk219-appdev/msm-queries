<h1>
  Actor #<%= @the_actor.id%> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%=@the_actor.id%>" class="btn btn-block btn-outline-secondary">
  Delete actor
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@the_actor.name%>
  </dd>

  <dt>
    Date of birth
  </dt>
  <dd>
    <%=@the_actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@the_actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%=@the_actor.image%>" style="width:250px;">
  </dd>

  <dt>
    Created
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at)%> ago
  </dd>

  <dt>
    Updated
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at)%> ago
  </dd>
</dl>

<h2>Filmography</h2>

<table border="1">
<% @characters.each do |a_role|%>
  <tr>
    <td>
      <%title = Movie.where({:id => a_role.movie_id}).at(0) %>
      <%= title.title%>
    </td>
    <td>
      <%year = Movie.where({:id => a_role.movie_id}).at(0) %>
      <%= year.year%>
    </td>
    <td>
      <%director = Director.where({:id => title.director_id}).at(0) %>
      <%= director.name%>
    </td>
    <td>
      <%= a_role.name%>
    </td>
    <td>
      <a href="/movies/<%= a_role.movie_id%>">
        Show details
      </a>
    </td>
  </tr>
<%end%>
</table>
